<div class="row">
  <div class="hero-container">
    <div class="hero-page-image">
      <%= image_tag 'mtgcast-logo-itunes.png' %>
    </div>
    <div class="hero-episode-container">
      <div class="page-name-container">
        <h1>
          <%= @page.name %>
        </h1>
        <% if current_user && policy(@page.posts.build).create? %>
          <div>
            <%= link_to 'Edit', edit_page_path(@page), class: 'btn btn-sm btn-light' %>
            <%= link_to '+ Episode', new_page_post_path(@page), class: 'btn btn-sm btn-primary' %>
          </div>
        <% end %>
      </div>
      <% if @posts.first %>
        <div class="page-post-info-container">
          <span>
            <%= @posts.first.publish_time.localtime.strftime('%m/%d/%Y') %>
          </span>
          <h3>
            <%= link_to @posts.first.postable.title, page_post_path(@page, @posts.first) %>
          </h3>
          <p>
            <%= simple_format(truncate(@posts.first.postable.description, length: 150)) %>
          </p>
          <p>
            <%= link_to 'Read more', page_post_path(@page, @posts.first)  %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-10 offset-md-1">
    <div class="posts-container">
      <% if @page.posts %>
        <% @posts.each do |post| %>
          <div class="post-container">
            <h3>
              <%= link_to post.postable.title, page_post_path(@page, post) %>
            </h3>
            <div class="post-info">
              <p>
                <em><%= 'Scheduled For: ' if post.publish_time > Time.now %>
                <%= post.publish_time.localtime.strftime('%m/%d/%Y') %></em>
              </p>
              <p>
                <%= simple_format(truncate(post.postable.description, length: 150)) %>
              </p>
              <p class="page-read-more">
                <%= link_to 'Read more', page_post_path(@page, post) %>
              </p>
            </div>
          </div>
        <% end %>
      <% else %>
        You don't have any podcasts.
      <% end %>
    </div>
    <div class="pagination-container">
      <%= will_paginate @posts %>
    </div>
  </div>
</div>
