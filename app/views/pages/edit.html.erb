<div class="row">
  <div class="col-md-8 offset-md-2">
    <span>
      Settings for
    </span>
    <h1><%= @page.name %></h1>
    <div>
      <p>
        Feed URL: 
        <%= link_to page_feed_path(@page), target: '_blank' do %>
          <%= Rails.application.routes.url_helpers.page_feed_url(Page.first) %>
        <% end %>
      </p>
      <p>
        Included in Aggregate Feed: <%= @page.included_in_aggregate_feed.to_s.capitalize %>
        <% if @page.included_in_aggregate_feed == false %>
          <%= link_to 'Request Inclusion', 'mailto:mtgcast@hipstersofthecoast.com', class: 'btn btn-sm btn-light ml-3' %>
        <% end %>
      </p>
    </div>
    <div>
      <%= form_with model: @page, html: { class: 'needs-validation', novalidate: true } do |form| %>
          <div class="form-group required">
            <%= form.label :name, 'Name', class: 'control-label' %>
            <%= form.text_field :name, autofocus: true, required: true, class: 'form-control edit-post-title'%>
          </div>
          <div class="actions">
            <%= form.submit 'Update', class: 'btn btn-primary' %>
          </div>
        <% end %>
    </div>
  </div>
</div>