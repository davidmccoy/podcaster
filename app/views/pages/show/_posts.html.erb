<div class="col-lg-8 offset-lg-2 col-md-12">
  <div class="posts-container">
    <%= render 'pages/nav/pills' %>
    <% unless page.posts.empty? %>
      <% posts.each do |post| %>
        <hr>
        <%= render "posts/postables/index/#{post.postable_name}", post: post %>
      <% end %>
    <% else %>
      <div class="no-episodes">
        <% if current_user && policy(page).edit? %>
          <p>
            You don't have any podcast episodes. <%= link_to 'Add one now!', new_page_dashboard_audio_post_path(page) %>
          </p>
        <% else %>
          <p>
            <%= page.name %> hasn't posted anything yet.
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="pagination-container">
    <%= will_paginate posts %>
  </div>
</div>
