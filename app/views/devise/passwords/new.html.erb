<div class="row">
  <div class="col-md-8 offset-md-2">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group required">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', required: true, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
