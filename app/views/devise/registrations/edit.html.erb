<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="content-block">
      <h2>Edit Profile</h2>
      <p>
        <%= link_to 'Change Password', user_password_path, class: 'btn btn-sm btn-light' %>
      </p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true, method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group required">
          <%= f.label :first_name, class: 'control-label' %>
          <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %>
        </div>

        <div class="form-group required">
          <%= f.label :last_name, class: 'control-label' %>
          <%= f.text_field :last_name, autofocus: false, required: true, class: 'form-control' %>
        </div>

        <div class="form-group required">
          <%= f.label :email, class: 'control-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

    <div class="content-block">
      <h3>Delete My Account</h3>

      <p><%= button_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>

      <%= link_to "< Back", :back %>
    </div>
  </div>
</div>
